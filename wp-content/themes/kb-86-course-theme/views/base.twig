{% import "macros/html.twig" as html %}
{% block html_head_container %}

{% include 'partials/header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">
		<main class="main__site">
			<header class="header section__wrapper">
				{% block header %}
				<section>
					<a class="hdr-logo-link" href="{{site.url}}" rel="home">{{ html.logo() }}</a>
					<nav id="nav-main" class="nav--main" role="navigation">
						{% include "menu.twig" with {'items': menu.get_items} %}
					</nav><!-- #nav -->
				</section>
				{% endblock %}
			</header>

		<section id="content" role="main" class="content-wrapper">
			{% if title %}<h1>{{title}}</h1>{% endif %}
			<div class="wrapper {{sidebar_class}}">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</section>

		{% block footer %}
			<footer id="footer">
				{% include 'partials/footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
		</main>
	</body>
</html>
