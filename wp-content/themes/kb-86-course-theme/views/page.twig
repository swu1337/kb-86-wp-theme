{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="section__content">
				{% if post.get_field('content') %}
					<div class="section__content-body">
						{% for layout in post.get_field('content') %}
							{% if layout.acf_fc_layout == 'intro_hero' %}
								{% include "layouts/intro_hero.twig" with {
									'fields': layout,
									'class': layout.acf_fc_layout ~ '__section'
									} 
								%}
							{% endif %}
						{% endfor %}
					</div>
				{% endif %}	
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}