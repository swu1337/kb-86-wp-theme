{%- import 'macros/html.twig' as html -%}

{% if pagination and pagination.pages is not empty %}
    <div class="pagination">
        <div class="pagination__prev{% if not pagination.prev %} is-disabled{% endif %}">
            {% if pagination.prev %}
                <a href="{{ pagination.prev.link }}" class="pagination__link">
                    {{ html.icon('chevron-left', 'pagination__icon') }} 
                </a>
            {% else %}
                {{ html.icon('chevron-left', 'pagination__icon') }} 
            {% endif %}
        </div>
        <ul class="pagination__list">
            {% for page in pagination.pages %}
                <li class="pagination__item{% if page.current %} is-current{% endif %}">
                    {% if page.link %}
                        <a href="{{ page.link }}" class="pagination__link">{{ page.title }}</a>
                    {% else %}
                        <span class="pagination__link">{{ page.title }}</span>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
        <div class="pagination__next{% if not pagination.next %} is-disabled{% endif %}">
            {% if pagination.next %}
                <a href="{{ pagination.next.link }}" class="pagination__link">
                    {{ html.icon('chevron-right', 'pagination__icon') }} 
                </a>
            {% else %}
                {{ html.icon('chevron-right', 'pagination__icon') }} 
            {% endif %}
        </div>
    </div>
{% endif %}