{% if menu %}
	<ul class="nav__list--main">
		{% for item in items %}
			<li class="{{ item.classes | join(' ') }} nav__list-item">
				<a class="nav__link" target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
					{% if item.children %}
							<ul class="nav-drop">
									{% for child in item.children %}
											<li class="nav-drop-item">
													<a href="{{ child.link }}">{{ child.title }}</a>
											</li>
									{% endfor %}
							</ul>
					{% endif %}
			</li>
		{% endfor %}
		{% if user %}
			<li>
				<a class="nav__link nav__button" href="{{ logout }}">Logout</a>
			</li>
		{% else %}
			<li>
				<a class="nav__link nav__button" href="{{ login }}">Login</a>
			</li>
		{% endif %}
	</ul>
{% endif %}
